{
  "variables": {
    "timezone" : null,
    "version": null,
    "image_name": null,
    "repository": null
  },
  "builders": [
    {
      "type": "docker",
      "ecr_login": true,
      "image": "583812563872.dkr.ecr.ap-southeast-2.amazonaws.com/linux-packer:centos",
      "commit": true,
      "aws_profile": "default",
      "run_command": [
        "--privileged",
        "-e",
        "container=docker",
        "-v",
        "/sys/fs/cgroup:/sys/fs/cgroup",
        "-d",
        "-i",
        "-t",
        "{{.Image}}",
        "/usr/bin/bash"
      ],
      "changes": [
        "ENV LANG en_US.UTF-8",
        "ENV TZ {{user `timezone`}}",
        "ENV PATH /opt/puppetlabs/puppet/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provisioners/pre-req.sh"
    },
    {
      "type": "shell",
      "script": "provisioners/install_python.sh"
    },
    {
      "type": "shell",
      "script": "provisioners/install_mssql_tool.sh"
    },
    {
      "type": "shell",
      "script": "provisioners/pip_installs.sh"
    },
    {
      "type": "shell",
      "script": "provisioners/install_pyodbc.sh"
    },
    {
      "type": "shell",
      "script": "provisioners/install_kubectl.sh"
    },
    {
      "type": "file",
      "source": "templates/bash/python_prometheus.sh",
      "destination": "/bin/exporter.sh"
    },
    {
      "type": "file",
      "source": "templates/python/mssql_to_s3_exporter.py",
      "destination": "/bin/mssql_to_s3_exporter.py"
    },
    {
      "type": "file",
      "source": "templates/python/python_prometheus.py",
      "destination": "/bin/python_prometheus.py"
    },
    {
      "type": "puppet-masterless",
      "prevent_sudo": true,
      "puppet_bin_dir": "/opt/puppetlabs/bin/",
      "hiera_config_path": "conf/hiera.yaml",
      "extra_arguments": "--debug",
      "staging_directory": "/tmp/{{user `image_name`}}/",
      "manifest_file": "provisioners/extra_tools.pp",
      "module_paths": [
        "modules"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "{{user `repository`}}/{{user `image_name`}}",
      "tag": "latest",
      "only": [
        "docker"
      ]
    },
    {
      "type": "docker-tag",
      "repository": "{{user `repository`}}/{{user `image_name`}}",
      "tag": "{{user `version`}}",
      "only": [
        "docker"
      ]
    }
  ]
}
